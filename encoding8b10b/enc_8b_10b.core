CAPI=2:
name: "socet:chiplet:enc_8b_10b:1.0.0"
description: ""

filesets:
    rtl:
        files:
            - "include/wrap_dec_8b_10b_if.sv"
            - "include/wrap_enc_8b_10b_if.sv"
            - "source/enc_8b10b.sv"
            - "source/dec_8b10b.sv"
            - "source/wrap_dec_8b_10b.sv"
            - "source/wrap_enc_8b_10b.sv"

        file_type: systemVerilogSource
        depend:
             - "socet:chiplet:include:0.0.1"

    synth:
        depend:
            - "ece337:tech:AMI_05_LIB"
            - "socet:chiplet:enc_8b_10b_syn"

    tb:
        files:
            - "testbench/tb_8b_10b_dec_wrap.sv"
            - "waves/dec_8b_10b.do": { file_type: user }
            - "waves/dec_8b_10b.gtkw": { file_type: user } 
            # - "data/file.txt": { file_type: user }
        file_type: systemVerilogSource

    synfiles:
        depend:
            - "socet:chiplet:synfiles"

targets:
    default: &default
        filesets:
            - rtl
        toplevel: enc_8b_10b

    sim: &sim
        <<: *default
        default_tool: verilator
        filesets_append:
            - tb
        toplevel: tb_8b_10b_dec_wrap
        tools:
            modelsim:
                vsim_options:
                    - -vopt
                    - -voptargs='+acc'
                    - -t ps
                    - -do waves/enc_8b_10b.do
                    - -onfinish stop
                    - -do "set PrefSource(OpenOnFinish) 0 ; set PrefMain(LinePrefix) \"\" ; set PrefMain(colorizeTranscript) 1"
                    - -coverage
                vlog_options:
                    - +cover
            verilator:
                verilator_options:
                    - --cc
                    - --trace
                    - --main
                    - --timing
                    - --coverage
                make_options:
                    - -j

    lint:
        <<: *default
        default_tool: verilator
        filesets_append:
            - tb
        tools:
            verilator:
                mode: lint-only
                verilator_options:
                    - --timing
                    - -Wall

    syn:
        <<: *default
        filesets_append:
            - synfiles
        default_tool: design_compiler
        toplevel: enc_8b_10b
        tools:
            design_compiler:
                script_dir: "src/socet_chiplet_synfiles_0"
                dc_script: "synth.tcl"
                report_dir: "reports"
                target_library: "/home/ecegrid/a/ece337/summer24-refactor/tech/ami05/osu05_stdcells.db"
                link_library: "/home/ecegrid/a/ece337/summer24-refactor/tech/ami05/osu05_stdcells.db dw_foundation.sldb"

    syn_sim:
        <<: *sim
        filesets:
            - synth
            - tb

